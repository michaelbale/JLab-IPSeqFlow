  executor = 'slurm'
  queue = 'panda'
  scratch = true
  scratch = '/scratchLocal/`whoami`_${SLURM_JOBID}'
  
  withLabel: med_mem {
	time = 8.h
	cpus = 6
	memory = 12.GB
  }
  
  withLabel: big_mem {
	time = 18.h
	cpus = 8
	memory = 32.GB
